<Application x:Class="SafetyTestTool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SafetyTestTool"
             xmlns:materialDesign ="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="pack://application:,,,/View/LoginView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LanguageConfig;component/Chinese.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="NGroupBox" TargetType="{x:Type GroupBox}"/>
            <Style x:Key="NButton" TargetType="{x:Type Button}"/>
            <Style x:Key="NDataPicker" TargetType="{x:Type DatePicker}"/>
            <Style x:Key="NDataGrid" TargetType="{x:Type DataGrid}"/>

            <Style x:Key="Style1" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">

                <Setter Property="Content" Value="{DynamicResource dg1}"/>
                <!--终端别名-->
            </Style>
            <Style x:Key="Style2" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                <Setter Property="Content" Value="{DynamicResource dg2}"/>
                <!--TEI/ESN-->
            </Style>
            <Style x:Key="Style3" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                <Setter Property="Content" Value="{DynamicResource dg3}"/>
                <!--TEI/ESN-->
            </Style>
            <Style x:Key="Style4" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                <Setter Property="Content" Value="{DynamicResource dg4}"/>
                <!--TEI/ESN-->
            </Style>
            <Style x:Key="Style5" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                <Setter Property="Content" Value="{DynamicResource b1}"/>
                <!--TEI/ESN-->
            </Style>
            <Style x:Key="Style6" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                <Setter Property="Content" Value="{DynamicResource b2}"/>
                <!--TEI/ESN-->
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
