<Window x:Class="SunwaysFactoryProgram.Views.FuncViews.CheckCodeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SunwaysFactoryProgram.Views.FuncViews"
        mc:Ignorable="d"
        Title="Check Code输入" Height="200" Width="450" ResizeMode="NoResize" WindowStyle="ThreeDBorderWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="请扫描Check Code" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="20"/>
        <TextBox x:Name="tbCheckCode" Grid.Row="1" Width="250"  BorderThickness="1" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="20" KeyDown="tbCheckCode_KeyDown"/>
        <Button Content="确定" Grid.Row="2" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="20" Click="Button_Click"/>
    </Grid>
</Window>
