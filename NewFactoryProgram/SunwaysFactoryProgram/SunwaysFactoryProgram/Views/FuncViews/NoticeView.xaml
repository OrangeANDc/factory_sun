<Window x:Class="SunwaysFactoryProgram.Views.FuncViews.NoticeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SunwaysFactoryProgram.Views.FuncViews"
             mc:Ignorable="d" 
             Height="200" Width="450" Background="White" ResizeMode="NoResize" WindowStyle="ThreeDBorderWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbNotice" Foreground="Red" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="23"/>
            <Button Content="确定" Grid.Row="1" HorizontalAlignment="left" Margin="100,0,0,0" VerticalAlignment="Center" FontSize="20" Click="ButtonYes_Click" />
        <Button  Content="取消" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,100,0" VerticalAlignment="Center" FontSize="20" Click="ButtonNo_Click" />
        <Button x:Name="btnRetry" Content="确认接线并重试" Grid.Row="2" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="20" Click="ButtonRetry_Click" />
    </Grid>
</Window>
